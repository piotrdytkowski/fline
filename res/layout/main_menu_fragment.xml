<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".menu.MenuActivity" >
	<Button android:id="@+id/newGameButton"
        android:text="@string/newGameButton"
        android:layout_width="match_parent"
    	android:layout_height="100dp"
    	android:textColor="@color/textColour"
    	android:background="@android:color/transparent"
        />
	<Button android:id="@+id/optionsButton"
        android:text="@string/optionsButton"
        android:layout_width="match_parent"
    	android:layout_height="100dp"
    	android:textColor="@color/textColour"
    	android:background="@android:color/transparent"
        />
	<Button android:id="@+id/highScoresButton"
        android:text="@string/highScoresButton"
        android:layout_width="match_parent"
    	android:layout_height="100dp"
    	android:textColor="@color/textColour"
    	android:background="@android:color/transparent"
        />
	<Button android:id="@+id/exitGameButton"
        android:text="@string/exitButton"
        android:layout_width="match_parent"
    	android:layout_height="100dp"
    	android:textColor="@color/textColour"
    	android:background="@android:color/transparent"
        />
</LinearLayout>